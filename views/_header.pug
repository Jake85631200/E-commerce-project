header.header
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top(style="padding: 8px 16px")
    .container-fluid(style="padding: 0px")
      a.navbar-brand(style="margin: 0px; padding: 8px 16px 8px 0px", href="/") PowMart
      if user
        a.nav-profile.nav__el.text-light(href="/profile")
          img.nav__user-img(src=`${user.image}`, alt=`Photo of ${user.name}`)
          span(style="padding: 8px 0px 8px 16px")= user.name.split(" ")[0]
      button.navbar-toggler(
        type="button",
        data-bs-toggle="collapse",
        data-bs-target="#navbarSupportedContent",
        aria-controls="navbarSupportedContent",
        aria-expanded="false",
        aria-label="Toggle navigation"
      )
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
        .nav-guides
          if user
            a.nav-cart.nav-link.text-warning(style="padding: 8px 0px 8px 16px", href="/my-cart")
              i.fas.fa-shopping-cart
              i(style="margin-left: 5px; font-style: normal") Cart
            a.nav-logout-btn.nav-link.text-warning(style="padding: 8px 0px 8px 16px", href="#")
              i(style="font-style: normal", aria-hidden="true") Logout
          else
            a.nav-cart.nav-link.text-warning(style="padding: 8px 0px 8px 16px", href="/login")
              i.fas.fa-shopping-cart
              i(style="font-style: normal") Cart
            a.nav-login-page.nav-link.text-warning(
              style="font-style: normal; padding: 8px 0px 8px 16px",
              aria-hidden="true",
              href="/login"
            )
              i(style="font-style: normal") Login
            a.nav-link.text-warning(style="font-style: normal; padding: 8px 0px 8px 16px", href="/signup")
              i(style="font-style: normal") Sign up
