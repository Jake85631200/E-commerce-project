extends base

block content
  main
    .main-content
      //- Title-container
      .main-container.text-center.py-5
        h1 Welcome!
        p An e-commerce site, not much goods!

      //- Product-container
      .container.mt-4
        .row(style="display: flex")
          //- Product-card
          each product in products
            .col-12.col-sm-6.col-md-4.col-lg-3.mb-4
              a.card(href=`/product/${product._id}`)
                .card-img-container
                  img.card-img-top.img-fluid(src=`${product.image}`, alt="Product Image")
                .card-body
                  h5.card-title
                    span= product.product_name
                  .product-rating.mb-2
                    span.rating-value 4.5
                    span.stars &starf;&starf;&starf;&starf;&star;