# 伺服器設定
PORT=3000
NODE_ENV=development

# 資料庫設定
DATABASE=mongodb+srv://<USERNAME>:<PASSWORD>@e-commerce-project.<CLUSTER>.mongodb.net/
DATABASE_PASSWORD=<YOUR_DATABASE_PASSWORD>

# JWT 設定
JWT_SECRET=<YOUR_JWT_SECRET_KEY>
JWT_EXPIRES_IN=7d

# JWT Cookie 設定
JWT_COOKIE_SECRET=<YOUR_JWT_COOKIE_SECRET>
JWT_COOKIE_EXPIRES_IN=30

# 郵件設定 (Gmail)
GMAIL_USER=<YOUR_GMAIL_USER>
GMAIL_PASSWORD=<YOUR_GMAIL_PASSWORD>

# 測試郵件設定
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=<YOUR_EMAIL_USERNAME>
EMAIL_PASSWORD=<YOUR_EMAIL_PASSWORD>

# Redis 設定
REDIS_ENDPOINT_USERNAME=default
REDIS_ENDPOINT_URI=redis://<REDIS_HOST>:<REDIS_PORT>
REDIS_ENDPOINT_PASSWORD=<YOUR_REDIS_PASSWORD>

# 本地 Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<YOUR_LOCAL_REDIS_PASSWORD>

# Stripe 設定
STRIPE_PUBLISHABLE_KEY=<YOUR_STRIPE_PUBLISHABLE_KEY>
STRIPE_SECRET_KEY=<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_WEBHOOK_SECRET>

# Cloudinary 設定
CLOUDINARY_CLOUD_NAME=<YOUR_CLOUDINARY_CLOUD_NAME>
CLOUDINARY_API_KEY=<YOUR_CLOUDINARY_API_KEY>
CLOUDINARY_SECRET_KEY=<YOUR_CLOUDINARY_SECRET_KEY>
